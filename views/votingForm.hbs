<h2>Poll</h2>
<p>Pineapple belongs on Pizza</p>
<div id="poll">
    <div class="form-check">
        <input class="form-check-input" type="radio" name="choice" id="option1" value="agree">
        <label class="form-check-label" for="option1">
            Agree
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="choice" id="option2" value="neutral">
        <label class="form-check-label" for="option2">
            Neutral
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="choice" id="option3" value="disagree">
        <label class="form-check-label" for="option3">
            Disagree
        </label>
    </div>
    <button onclick="update()" type="submit" id='submit' class="btn btn-primary">Submit</button>
</div>

<p id="result"></p>
<div class="w-50">
    <canvas id="results" width="400" height="400"></canvas>
</div>